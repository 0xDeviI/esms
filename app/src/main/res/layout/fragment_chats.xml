<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.main.fragments.ChatsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            tools:visibility="visible"
            android:visibility="gone"
            android:id="@+id/view_no_conversation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="?attr/actionBarSize">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="No conversations yet"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Start a conversation by importing your contacts or add them manually."
                android:textSize="11sp"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/conversations_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>

</layout>